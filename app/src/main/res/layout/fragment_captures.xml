<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E0BA"
    tools:context=".ui.captures.CapturesFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bird Name"
            android:textColor="#2C5E29"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputBirdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Enter Bird Name"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Location"
            android:textColor="#2C5E29"
            android:textSize="26sp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/displayLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="16dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/date_time"
            android:textColor="#2C5E29"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-filled with current time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Notes"
            android:textColor="#2C5E29"
            android:textSize="26sp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="Add any notes"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:text="Save Bird Sighting"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>